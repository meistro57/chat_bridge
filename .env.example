APP_NAME="Chat Bridge"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_PORT=8000
APP_VERSION=0.8.0

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# For local development (SQLite)
DB_CONNECTION=sqlite

# For Docker/Production (PostgreSQL)
# DB_CONNECTION=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_DATABASE=chatbridge
# DB_USERNAME=chatbridge
# DB_PASSWORD=secret

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# For Docker, use: redis
BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local

# For Docker, use: redis
QUEUE_CONNECTION=database

# For Docker, use: redis
CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Laravel Reverb (WebSocket Server)
REVERB_APP_ID=chatbridge
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SERVER_PORT=8080
REVERB_SCHEME=http

# For Docker
# REVERB_HOST=reverb
# REVERB_SERVER_HOST=0.0.0.0
# REVERB_SERVER_PORT=8080

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Qdrant Vector Database for RAG
QDRANT_ENABLED=true
QDRANT_HOST=localhost
QDRANT_PORT=6333

# For Docker
# QDRANT_HOST=qdrant

# AI Provider API Keys (add your own)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# DEEPSEEK_API_KEY=
# GEMINI_API_KEY=
# OPENROUTER_API_KEY=

# AI Tool Calling (MCP Integration)
AI_TOOLS_ENABLED=true
AI_MAX_TOOL_ITERATIONS=5

# Discord conversation broadcasting
DISCORD_STREAMING_ENABLED=true
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
DISCORD_THREAD_AUTO_CREATE=true
DISCORD_CIRCUIT_BREAKER_THRESHOLD=5
